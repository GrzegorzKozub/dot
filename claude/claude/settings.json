{
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "DISABLE_AUTOUPDATER": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "permissions": {
    "deny": [
      "Read(**/*.*env)",
      "Read(**/*.cert)",
      "Read(**/*.crt)",
      "Read(**/*.env)",
      "Read(**/*.key)",
      "Read(**/*.ovpn)",
      "Read(**/*.pem)",
      "Read(**/*.secret)",
      "Read(**/*credentials)",
      "Read(**/*settings.xml)",
      "Read(**/.secrets/**)",
      "Read(**/keys/**)"
    ]
  },
  "sandbox": { "enabled": false, "excludedCommands": ["docker", "git"] },
  "attribution": { "commit": "", "pr": "" }
}
