[alias]
  g = grep --context 3 --heading --line-number --show-function
  ls = log --graph --all --abbrev-commit --date=relative --format=format:'%C(3)%h %C(auto)%s %C(6)%an %C(7)%ar %C(auto)%D%C(reset)'
  ll = log --graph --all --abbrev-commit --format=format:'%C(3)%h %C(6)%an %C(7)%aD %C(auto)%D%n%C(auto)%B%C(reset)'
  pl = pull --prune
  ps = ! [[ $(git config "branch.$(git branch --show-current).merge") ]] && git push || git push --set-upstream origin $(git branch --show-current)
  lt = describe --abbrev=0 --tags
[color]
  branch = auto
  diff = auto
  grep = auto
  interactive = auto
  pager = true
  showBranch = auto
  status = auto
  ui = auto
[color.branch]
  current = blue
  local = blue
  plain = normal
  remote = green
  upstream = green
[color.decorate]
  HEAD = red
  branch = blue
  remoteBranch = green
  tag = magenta
  stash = magenta
[color.diff]
  commit = yellow
  func = blue
  frag = magenta
  meta = cyan
  new = green
  old = red
  plain = normal
  whitespace = red reverse
[color.grep]
  context = normal
  filename = cyan
  function = blue
  linenumber = black bold
  match = yellow
  selected = normal
  separator = black bold
[color.interactive]
  error = red
  header = normal
  help = normal
  prompt = blue
[color.status]
  added = green
  branch = blue
  changed = yellow
  header = normal
  localBranch = blue
  nobranch = red
  remoteBranch = green
  unmerged = red
  untracked = red
[core]
  editor = nvim
  fscache = true
  pager = less --quit-if-one-screen --RAW-CONTROL-CHARS --use-color -DPw -DSkY -Ddy -Dsm -Dub
  symlinks = true
  whitespace = blank-at-eol,tab-in-indent
[diff]
  algorithm = histogram
  guitool = code
  renames = copies
  tool = nvim
[difftool]
  prompt = false
[difftool "nvim"]
  cmd = nvim -d "$LOCAL" "$REMOTE"
[difftool "code"]
  cmd = code --wait --diff "$LOCAL" "$REMOTE"
[filter "lfs"]
  clean = git-lfs clean -- %f
  process = git-lfs filter-process
  required = true
  smudge = git-lfs smudge -- %f
[gc]
  auto = 1
[github]
  user = GrzegorzKozub
[merge]
  guitool = code
  renormalize = true
  tool = nvim
[mergetool]
  keepBackup = false
  prompt = false
[mergetool "nvim"]
  cmd = nvim -d "$LOCAL" "$MERGED" "$BASE" "$REMOTE" -c "wincmd w" -c "wincmd J"
[mergetool "code"]
  cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED
[pack]
  packSizeLimit = 2g
[pull]
  rebase = true
[push]
  autoSetupRemote = true
  default = simple
[rebase]
  autosquash = true
  autostash = true
[rerere]
  enabled = true
[safe]
  directory = *
[user]
  email = grzegorz.kozub@gmail.com
  name = greg
