[merge]
  guitool = vim
  renormalize = true
  tool = vim
[mergetool]
  keepBackup = false
  prompt = false
[mergetool "vim"]
  cmd = vim -d -c "VimMerge" "$LOCAL" "$BASE" "$REMOTE" "$MERGED"
  trustExitCode = false
[mergetool "code"]
  cmd = code --wait "$MERGED"
  trustExitCode = true
[pack]
  packSizeLimit = 2g
[pull]
  rebase = true
[push]
  default = simple
[rebase]
