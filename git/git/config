[alias]
  g = grep --context 3 --heading --line-number --show-function
  ls = log --graph --all --abbrev-commit --date=relative --format=format:'%C(3)%h %C(auto)%s %C(6)%an %C(7)%ar %C(auto)%D%C(reset)'
  ll = log --graph --all --abbrev-commit --format=format:'%C(3)%h %C(6)%an %C(7)%aD %C(auto)%D%n%C(auto)%B%C(reset)'
  pl = pull --prune
  ps = ! [[ $(git config "branch.$(git branch --show-current).merge") ]] && git push || git push --set-upstream origin $(git branch --show-current)
  lt = describe --abbrev=0 --tags
[color]
  branch = auto
  diff = auto
  grep = auto
  interactive = auto
  pager = true
  showBranch = auto
  status = auto
  ui = auto
[color.branch]
  current = 4
  local = 4
  plain = -1
  remote = 2
  upstream = 2
[color.decorate]
  HEAD = 1 ; 9 for solarized
  branch = 4
  remoteBranch = 2
  tag = 5 ; 13 for solarized
  stash = 5
[color.diff]
  commit = 3
  func = 4
  frag = 5 ; 13 for solarized
  meta = 6
  new = 2
  old = 1
  plain = -1
  whitespace = 1 reverse
[color.grep]
  context = -1
  filename = 6
  function = 4
  linenumber = 8
  match = 3
  selected = -1
  separator = 8
[color.interactive]
  error = 1
  header = -1
  help = -1
  prompt = 4
[color.status]
  added = 2
  branch = 4
  changed = 3
  header = -1
  localBranch = 4
  nobranch = 1
  remoteBranch = 2
  unmerged = 1
  untracked = 1
[commit]
  template = ~/.config/git/message
[core]
  editor = nvim
  fscache = true
  pager = less --quit-if-one-screen --RAW-CONTROL-CHARS --use-color -DPw -DSkY -Ddy -Dsm -Dub
  symlinks = true
  whitespace = blank-at-eol,tab-in-indent
[diff]
  algorithm = histogram
  guitool = code
  renames = copies
  tool = nvim
[difftool]
  prompt = false
[difftool "vim"]
  cmd = vim -d -c "VimDiff" "$LOCAL" "$REMOTE"
[difftool "nvim"]
  cmd = nvim -d "$LOCAL" "$REMOTE"
[difftool "code"]
  cmd = code --wait --diff "$LOCAL" "$REMOTE"
[filter "lfs"]
  clean = git-lfs clean -- %f
  process = git-lfs filter-process
  required = true
  smudge = git-lfs smudge -- %f
[gc]
  auto = 1
[github]
  user = GrzegorzKozub
[merge]
  guitool = code
  renormalize = true
  tool = nvim
[mergetool]
  keepBackup = false
  prompt = false
[mergetool "vim"]
  cmd = vim -d -c "VimMerge" "$LOCAL" "$BASE" "$REMOTE" "$MERGED"
  trustExitCode = false
[mergetool "nvim"]
  cmd = nvim -d "$LOCAL" "$MERGED" "$BASE" "$REMOTE" -c "wincmd w" -c "wincmd J"
[mergetool "code"]
  cmd = code --wait --merge $REMOTE $LOCAL $BASE $MERGED
[pack]
  packSizeLimit = 2g
[pull]
  rebase = true
[push]
  autoSetupRemote = true
  default = simple
[rebase]
  autosquash = true
  autostash = true
[rerere]
  enabled = true
[safe]
  directory = *
[user]
  email = grzegorz.kozub@gmail.com
  name = greg
