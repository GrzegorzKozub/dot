[alias]
  g = grep --context 3 --heading --line-number --show-function
  ls = log --graph --all --abbrev-commit --date=relative --format=format:'%C(3)%h %C(auto)%s %C(6)%an %C(12)%ar %C(auto)%D%C(reset)'
  ll = log --graph --all --abbrev-commit --format=format:'%C(3)%h %C(6)%an %C(12)%aD %C(auto)%D%n%C(auto)%B%C(reset)'
  pl = pull --prune
  ps = ! [[ $(git config "branch.$(git branch --show-current).merge") ]] && git push || git push --set-upstream origin $(git branch --show-current)
[color]
  branch = auto
  diff = auto
  grep = auto
  interactive = auto
  pager = true
  showBranch = auto
  status = auto
  ui = auto
[color.branch]
  current = 4
  local = 4
  plain = -1
  remote = 2
  upstream = 2
[color.decorate]
  HEAD = 9
  branch = 4
  remoteBranch = 2
  tag = 13
  stash = 5
