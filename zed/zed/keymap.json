[
  {
    "bindings": {
      "ctrl-o": "pane::GoBack",

      "ctrl-w": null
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "alt-left": "pane::GoBack",
      "alt-right": "pane::GoForward",

      "ctrl-w ctrl-w": ["pane::CloseActiveItem", { "close_pinned": false }],

      "ctrl-w r": "pane::SplitRight",
      "ctrl-w d": "pane::SplitDown",

      "ctrl-w left": "workspace::ActivatePaneLeft",
      "ctrl-w down": "workspace::ActivatePaneDown",
      "ctrl-w up": "workspace::ActivatePaneUp",
      "ctrl-w right": "workspace::ActivatePaneRight",

      "ctrl-w ctrl-left": "vim::ResizePaneLeft",
      "ctrl-w ctrl-down": "vim::ResizePaneDown",
      "ctrl-w ctrl-up": "vim::ResizePaneUp",
      "ctrl-w ctrl-right": "vim::ResizePaneRight",

      "ctrl-w ctrl-0": "vim::ResetPaneSizes",

      "ctrl-w shift-left": "workspace::SwapPaneLeft",
      "ctrl-w shift-right": "workspace::SwapPaneRight",
      "ctrl-w shift-up": "workspace::SwapPaneUp",
      "ctrl-w shift-down": "workspace::SwapPaneDown",

      "ctrl-w z": "workspace::ToggleZoom",

      "ctrl-w j": "pane::JoinAll"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "ctrl-n": "project_panel::NewFile",
      "ctrl-shift-n": "project_panel::NewDirectory",

      "enter": "project_panel::Open"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-shift-s": "workspace::SaveAll"
    }
  }
]
