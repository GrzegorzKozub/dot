[
  {
    "bindings": {
      "ctrl-o": "pane::GoBack",
      "ctrl-i": "pane::GoForward",

      "ctrl-k r": "pane::SplitRight",
      "ctrl-k d": "pane::SplitDown",

      "ctrl-k left": "workspace::ActivatePaneLeft",
      "ctrl-k down": "workspace::ActivatePaneDown",
      "ctrl-k up": "workspace::ActivatePaneUp",
      "ctrl-k right": "workspace::ActivatePaneRight"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "ctrl-alt--": "pane::GoBack",
      "ctrl-_": "pane::GoForward",

      "alt-r": "pane::SplitRight",
      "alt-d": "pane::SplitDown"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "ctrl-n": "project_panel::NewFile",
      "ctrl-shift-n": "project_panel::NewDirectory",
      "enter": "project_panel::Open"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-shift-s": "workspace::SaveAll",

      "alt-left": "workspace::ActivatePaneLeft",
      "alt-down": "workspace::ActivatePaneDown",
      "alt-up": "workspace::ActivatePaneUp",
      "alt-right": "workspace::ActivatePaneRight",

      "ctrl-k shift-left": "workspace::SwapPaneLeft",
      "ctrl-k shift-right": "workspace::SwapPaneRight",
      "ctrl-k shift-up": "workspace::SwapPaneUp",
      "ctrl-k shift-down": "workspace::SwapPaneDown"
    }
  }
]
