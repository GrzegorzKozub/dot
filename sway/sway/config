# variables

set $mod mod4

# integrations

bar {
  swaybar_command waybar
}

set $menu wofi --show drun | xargs swaymsg exec --
set $term foot

# displays

bindswitch --reload --locked lid:on output eDP-1 disable
bindswitch --reload --locked lid:off output eDP-1 enable

output eDP-1 scale 2

output 'LG Electronics LG ULTRAGEAR+ 105NTNH17527' scale 1.5
output 'LG Electronics LG HDR 4K 0x00001C71' scale 1.5
output 'LG Electronics LG Ultra HD 0x000084E2' scale 1.5
output 'LG Electronics LG TV 0x00000101' scale 2

# night light

exec gammastep

bindsym $mod+shift+n exec pkill -USR1 gammastep

# brightness

bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym --locked XF86MonBrightnessUp exec brightnessctl set +5%

# sound

bindsym --locked XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

bindsym --locked XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym --locked XF86AudioRaiseVolume exec \
  [ $(pactl get-sink-volume @DEFAULT_SINK@ | grep -o '[0-9]\{1,3\}%' | head -n 1 | sed 's/%//') -lt 100 ] \
  && pactl set-sink-volume @DEFAULT_SINK@ +5%

# devices

input 'type:keyboard' {
  xkb_layout 'pl'
}

input 'type:touchpad' {
  dwt enabled
  middle_emulation enabled
  natural_scroll enabled
  tap enabled
}

input '2362:33322:GLORIOUS_Model_O_2_Wireless_Mouse' {
  pointer_accel -0.75
}

input '9610:8209:Glorious_Model_O_Wireless' {
  pointer_accel -0.75
}

exec rfkill unblock bluetooth

# appearance

output * bg ~/code/arch/home/greg/.local/share/backgrounds/women.jpg fill

font pango:Cantarell Bold 12

gaps inner 10

default_border pixel 2

client.focused #1d2021ff #1d2021ff #a89984ff #1d2021ff #1d2021ff
client.focused_inactive #32302f00 #32302fff #665c54ff #32302f00 #32302f00
client.unfocused #32302f00 #32302fff #665c54ff #32302f00 #32302f00
client.urgent #b47109ff #b47109ff #a89984ff #b47109ff #b47109ff

# apps

bindsym $mod+return exec $term
bindsym $mod+space exec $menu
bindsym $mod+q kill

# containers

focus_wrapping workspace

bindsym alt+tab focus next
bindsym alt+shift+tab focus prev

bindsym $mod+left focus left
bindsym $mod+right focus right
bindsym $mod+up focus up
bindsym $mod+down focus down

bindsym $mod+shift+left move left
bindsym $mod+shift+right move right
bindsym $mod+shift+down move down
bindsym $mod+shift+up move up

bindsym $mod+r mode '󰀽  resize'

mode '󰀽  resize' {
  bindsym left resize shrink width 10px
  bindsym right resize grow width 10px
  bindsym down resize shrink height 10px
  bindsym up resize grow height 10px

  bindsym escape mode 'default'
  bindsym return mode 'default'
}

bindsym $mod+f11 fullscreen toggle

bindsym $mod+f floating toggle
bindsym $mod+shift+f focus mode_toggle

# workspaces

bindsym $mod+tab workspace next
bindsym $mod+shift+tab workspace prev

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

bindsym $mod+shift+1 move container to workspace number 1, workspace 1
bindsym $mod+shift+2 move container to workspace number 2, workspace 2
bindsym $mod+shift+3 move container to workspace number 3, workspace 3
bindsym $mod+shift+4 move container to workspace number 4, workspace 4
bindsym $mod+shift+5 move container to workspace number 5, workspace 5
bindsym $mod+shift+6 move container to workspace number 6, workspace 6
bindsym $mod+shift+7 move container to workspace number 7, workspace 7
bindsym $mod+shift+8 move container to workspace number 8, workspace 8
bindsym $mod+shift+9 move container to workspace number 9, workspace 9
bindsym $mod+shift+0 move container to workspace number 10, workspace 10

# outputs

bindsym $mod+ctrl+left move container to output left, focus output left
bindsym $mod+ctrl+right move container to output right, focus output right

bindsym $mod+ctrl+shift+left focus output left
bindsym $mod+ctrl+shift+right focus output right

# screenshots

bindsym print exec slurp | grim -g - - | wl-copy

# media player

bindsym --locked XF86AudioPlay exec playerctl play-pause
bindsym --locked XF86AudioNext exec playerctl next
bindsym --locked XF86AudioPrev exec playerctl previous

# idle

for_window [app_id=".*"] inhibit_idle fullscreen

exec_always swayidle -w \
  timeout 60 'brightnessctl set 0% --save' resume 'brightnessctl --restore' \
  timeout 300 'chayang && swaymsg "output * power off" && swaylock' resume 'swaymsg "output * power on"' \
  timeout 600 'systemctl suspend' \
  before-sleep 'swaylock'

# lock

bindsym $mod+l exec swaylock

# logout

bindsym $mod+shift+l mode '󰀄  logout'

mode '󰀄  logout' {
  bindsym return exit
  bindsym escape mode 'default'
}

# reboot

bindsym $mod+shift+r mode '󰑙  reboot'

mode '󰑙  reboot' {
  bindsym return exec reboot
  bindsym escape mode 'default'
}

# shutdown

bindsym $mod+shift+s mode '󰤆  shutdown'

mode '󰤆  shutdown' {
  bindsym return exec shutdown now
  bindsym escape mode 'default'
}

# keyring (when not using gdm)

# exec eval $(gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)
# exec export SSH_AUTH_SOCK

# reload config

bindsym $mod+shift+c reload

# system config

include /etc/sway/config.d/*

